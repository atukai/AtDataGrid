<?php $this->headScript()->appendFile('/js/at-datagrid/datagrid.js') ?>
<?php $this->headLink()->appendStylesheet('/css/at-datagrid/datagrid.css') ?>

<? if ($this->customCss): ?>
    <?php $this->headLink()->appendStylesheet($this->customCss) ?>
<? endif; ?>

<h1 class="page-header"><?= $this->translate($this->grid->getTitle()) ?></h1>

<div class="row">
    <div class="col-md-12">
        <?= $this->render('at-datagrid/grid/paginator'); ?>
        <hr>

        <div class="at-grid table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" onclick="DataGrid.checkAll(this)"/>
                        </th>
                        <?php foreach ($this->grid as $column) : ?>
                            <?php if ($column->isVisible()): ?>
                                <th id="col-<?= $column->getName() ?>">
                                    <?php if ($column->isSortable()): ?>
                                        <a class="sortable" href="<?= $this->atBaseQueryParams(array('page' => 1, 'order' => $column->getName() . '~' . $column->getOrderDirection())) ?>">
                                            <?php if ($this->grid->getCurrentOrderColumnName() == $column->getName()): ?>
                                                <span class="active">
                                                    <?= $column->getLabel() ?>
                                                    <?php if ($this->grid->getCurrentOrderDirection() == 'asc'): ?>
                                                        &uarr;
                                                    <?php elseif($this->grid->getCurrentOrderDirection() == 'desc'): ?>
                                                        &darr;
                                                    <?php endif; ?>
                                                </span>
                                            <?php else: ?>
                                                <?= $column->getLabel() ?>
                                            <?php endif; ?>
                                        </a>
                                    <?php else: ?>
                                        <?= $column->getLabel() ?>
                                    <?php endif; ?>
                                </th>
                            <?php endif; ?>
                        <?php endforeach; ?>
                        <th style="width: <?= count($this->gridManager->getActions())*24+20 ?>px;"></th>
                    </tr>
                </thead>
                <tbody>

                    <?= $this->render('at-datagrid/grid/filters') ?>

                    <?php if (count($this->data)): ?>
                        <?= $this->render('at-datagrid/grid/rows') ?>
                    <?php endif ?>

                </tbody>
            </table>
            <?php if (!count($this->data)): ?>
                <div><?= $this->translate("No items found") ?></div>
            <?php endif ?>
        </div>

        <?php if (count($this->data)): ?>
            <?= $this->render('at-datagrid/grid/group-actions') ?>
        <? endif; ?>

        <hr>
        <?= $this->render('at-datagrid/grid/paginator'); ?>
    </div>
</div>